<Window x:Class="ProcessMonitor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:ProcessMonitor.UserControls"
        Title="Monitor Procesów" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.Row="0" LastChildFill="False" Background="#E8E8E8">
            <Button Content="Pokaż monitorowane procesy"
                    Margin="5"
                    Padding="8,4"
                    Click="OpenMonitoringWindow_Click"/>
        </DockPanel>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="350" MinHeight="250"/>
            </Grid.RowDefinitions>

            <uc:ProcessListControl Grid.Row="0" DataContext="{Binding}"/>

            <GridSplitter Grid.Row="1" Height="5"
                          HorizontalAlignment="Stretch"
                          Background="#D0D0D0"
                          Cursor="SizeNS"/>

            <uc:ProcessDetailsControl Grid.Row="1"
                                      DataContext="{Binding ProcessListViewModel}"
                                      Visibility="{Binding ProcessListViewModel.SelectedProcess,
                                                           Converter={StaticResource NullToVisibilityConverter}}"/>
        </Grid>
    </Grid>
</Window>