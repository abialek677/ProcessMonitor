<Window x:Class="ProcessMonitor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ProcessMonitor"
        xmlns:uc="clr-namespace:ProcessMonitor.UserControls"
        Title="Monitor Procesów" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="350" MinWidth="300"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="350" MinHeight="250"/>
            </Grid.RowDefinitions>

            <uc:ProcessListControl Grid.Row="0" DataContext="{Binding}"/>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="#D0D0D0" Cursor="SizeNS"/>

            <uc:ProcessDetailsControl Grid.Row="1" 
                                     DataContext="{Binding ProcessListViewModel}"
                                     Visibility="{Binding ProcessListViewModel.SelectedProcess, Converter={StaticResource NullToVisibilityConverter}}"/>
        </Grid>

        <Border Grid.Column="1" Background="#F5F5F5" BorderThickness="1,0,0,0" BorderBrush="#D0D0D0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Monitorowane Procesy" FontSize="14" FontWeight="Bold" 
                           Padding="10" Background="#E8E8E8"/>

                <ListBox Grid.Row="1" ItemsSource="{Binding MonitoringViewModel.MonitoredProcesses}"
                         SelectedItem="{Binding MonitoringViewModel.SelectedMonitoredProcess}"
                         Margin="5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="0,0,0,1" BorderBrush="#E0E0E0" Padding="5,3">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Text="{Binding ProcessName}"
                                               FontWeight="Bold"
                                               ToolTip="{Binding ProcessName,
                                                                 StringFormat='Śledzony od {0}'}"/>

                                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,5,0,0">
                                        <TextBlock Text="Max: "/>
                                        <TextBlock Text="{Binding MaxMemoryUsage, StringFormat='{}{0:N0} B'}"
                                                   Foreground="#D13438"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,3,0,0">
                                        <TextBlock Text="Śr: "/>
                                        <TextBlock Text="{Binding AverageMemoryUsage, StringFormat='{}{0:N0} B'}"
                                                   Foreground="#107C10"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,3,0,0">
                                        <TextBlock Text="Próbek: " FontSize="11"/>
                                        <TextBlock Text="{Binding SampleCount}" FontSize="11"/>
                                        <TextBlock Text=" | Status: " Margin="10,0,0,0" FontSize="11"/>
                                        <TextBlock Text="{Binding IsMonitoring, StringFormat='{}{0}'}"
                                                   FontSize="11"
                                                   Foreground="{Binding IsMonitoring,
                                                                        Converter={StaticResource BoolToColorConverter}}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <Button Grid.Row="2" Command="{Binding MonitoringViewModel.RemoveMonitoringCommand}"
                        Padding="10,8" Background="#D13438" Foreground="White" Margin="5">
                    Usuń ze śledzenia
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
