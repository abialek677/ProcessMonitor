<UserControl x:Class="ProcessMonitor.UserControls.ProcessDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Informacje podstawowe -->
        <Border Grid.Row="0" Background="#F0F0F0" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="PID:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Column="1" Text="{Binding SelectedProcess.ProcessId}" Margin="10,5"/>

                <TextBlock Grid.Row="1" Text="Nazwa:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SelectedProcess.ProcessName}" Margin="10,5"/>

                <TextBlock Grid.Row="2" Text="Pamięć:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Row="2" Grid.Column="1"
                           Text="{Binding SelectedProcess.WorkingSet, StringFormat='{}{0:N0} bajtów'}"
                           Margin="10,5"/>

                <TextBlock Grid.Row="3" Text="Ścieżka:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SelectedProcess.ProcessPath}" 
                          Margin="10,5" TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- Wątki i Moduły -->
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Wątki">
                <DataGrid ItemsSource="{Binding SelectedProcess.Threads}" 
                         AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Wątku" Binding="{Binding ThreadId}" Width="100"/>
                        <DataGridTextColumn Header="Stan" Binding="{Binding ThreadState}" Width="150"/>
                        <DataGridTextColumn Header="Priorytet" Binding="{Binding Priority}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Moduły">
                <DataGrid ItemsSource="{Binding SelectedProcess.Modules}" 
                         AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Nazwa Modułu" Binding="{Binding ModuleName}" Width="200"/>
                        <DataGridTextColumn Header="Ścieżka" Binding="{Binding ModuleFileName}" Width="400"/>
                        <DataGridTextColumn Header="Rozmiar (KB)"
                                            Binding="{Binding ModuleMemorySize, StringFormat='{}{0:N0}'}"
                                            Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
