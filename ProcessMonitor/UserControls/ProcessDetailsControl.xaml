<UserControl x:Class="ProcessMonitor.UserControls.ProcessDetailsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F0F0F0" Padding="15" BorderThickness="0,0,0,1" BorderBrush="#E0E0E0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- properties -->
                <TextBlock Grid.Column="0" Grid.Row="0" Text="PID:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding SelectedProcess.ProcessId}" Margin="10,5"/>

                <TextBlock Grid.Column="0" Grid.Row="1" Text="Name:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding SelectedProcess.ProcessName}" Margin="10,5"/>

                <TextBlock Grid.Column="0" Grid.Row="2" Text="Memory:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Column="1" Grid.Row="2"
                           Text="{Binding SelectedProcess.WorkingSet, StringFormat='{}{0:N0} bytes'}"
                           Margin="10,5"/>

                <TextBlock Grid.Column="0" Grid.Row="3" Text="Path:" FontWeight="Bold" Margin="0,5"/>
                <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding SelectedProcess.ProcessPath}"
                           Margin="10,5" TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- tabs -->
        <TabControl Grid.Row="1" Margin="10">
            <!-- threads tab -->
            <TabItem Header="Threads">
                <DataGrid ItemsSource="{Binding SelectedProcess.Threads}"
                          AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Thread ID" Binding="{Binding ThreadId}" Width="100"/>
                        <DataGridTextColumn Header="State" Binding="{Binding ThreadState}" Width="150"/>
                        <DataGridTextColumn Header="Priority" Binding="{Binding Priority}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <!-- modules tab -->
            <TabItem Header="Modules">
                <DataGrid ItemsSource="{Binding SelectedProcess.Modules}"
                          AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding ModuleName}" Width="200"/>
                        <DataGridTextColumn Header="Path" Binding="{Binding ModuleFileName}" Width="400"/>
                        <DataGridTextColumn Header="Size (KB)"
                                             Binding="{Binding ModuleMemorySize, StringFormat='{}{0:N0}'}"
                                             Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
